    <LinearLayout
        android:layout_width="match_parent"

        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/snpFull_name_create_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/black_person"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:hint=" Full Name"
            android:background="@drawable/create_event_style"
            android:textSize="13sp"


            android:padding="10dip"
            android:singleLine="true" />




        <EditText
            android:id="@+id/snpEmail_create_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/email"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:hint=" Email"
            android:background="@drawable/create_event_style"
            android:textSize="13sp"


            android:padding="10dip"
            android:singleLine="true" />



        <EditText
            android:id="@+id/price_create_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:drawableLeft="@drawable/dollar"
            android:background="@drawable/create_event_style"

            android:hint="Ticket price Optional"

            android:textSize="13sp"


            android:padding="10dip"
            android:singleLine="true" />




        <EditText
            android:id="@+id/people_create_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:drawableLeft="@drawable/people"
            android:background="@drawable/create_event_style"

            android:hint=" Number of People Optional"

            android:textSize="13sp"


            android:padding="10dip"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:background="@drawable/create_event_style"

            android:layout_marginTop="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/calendar"
                android:gravity="center"
                android:layout_marginLeft="10dp"

                android:text=" Date">

            </TextView>
            <DatePicker android:id="@+id/datePicker1"
                android:layout_width="match_parent"
                android:datePickerMode="spinner"
                android:textColor="@color/colorAccent"
                android:calendarViewShown="false"
                android:layout_height="80dp" />


        </LinearLayout>



        <EditText
            android:id="@+id/desciption_creat_event"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:textAlignment="viewStart"

            android:background="@drawable/create_event_style"

            android:hint=" Description"

            android:textSize="13sp"


            android:padding="10dip"
            android:singleLine="true"
            android:gravity="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:background="@drawable/create_event_style"

            android:layout_marginTop="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">



            <ImageView

                android:id="@+id/image_selected"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"

                android:scaleType="fitCenter"


                android:gravity="center"
                android:src="@drawable/gallery"
                >

            </ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:background="@drawable/create_event_style"

            android:layout_marginTop="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">



            <ImageView

                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"





                android:gravity="center"
                android:src="@android:drawable/ic_menu_camera"
                >

            </ImageView>


        </LinearLayout>

        <Button
            android:layout_centerInParent="true"
            android:layout_below="@+id/input_layout_cnfphnno"
            android:id="@+id/btnCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:background="@drawable/bluebutton_style"
            android:text="Create"/>
    </LinearLayout>





</LinearLayout>
