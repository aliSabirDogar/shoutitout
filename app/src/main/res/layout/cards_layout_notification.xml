<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:optRoundCardBackgroundColor="@android:color/white"







 >

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layer1"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/profile_pic_noti"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"


                android:src="@drawable/pic1"
                android:tag="image_tag" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"

                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textViewNameNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"


                    android:textSize="13sp"
                    android:text="Johny Martsz."
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="11sp"

                    android:text="                2 hours ago"
                    />


                <TextView
                    android:id="@+id/textViewNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="11sp"
                    android:layout_marginLeft="80dp"
                    android:drawableRight="@drawable/icon_arrow"

                    android:text=""
                    />


            </LinearLayout>







        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"



            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="11sp"

                android:text="Replied to  "
                />

            <TextView
                android:id="@+id/textViewRepliedPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:textSize="11sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="Ali Dogar"
                android:textAppearance="?android:attr/textAppearanceLarge"/>





        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="70dp"



            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textViewComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="11sp"
                android:textStyle="bold"
                android:maxLength="45"

                android:text="They look great"
                android:textAppearance="?android:attr/textAppearanceMedium"/>






        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="70dp"



            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/textViewOthersComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="11sp"

                android:text="and 5 commented more"
                android:textAppearance="?android:attr/textAppearanceMedium"/>






        </LinearLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>