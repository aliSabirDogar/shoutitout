<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"

    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"



        android:gravity="center"
        android:layout_height="250dp">

        <ImageView

            android:id="@+id/app_name"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:scaleType="centerInside"


            android:gravity="center"
            android:src="@drawable/logo"
            >

        </ImageView>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">


            <EditText
                android:id="@+id/snpusername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dip"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"

                android:hint="User name"

                android:background="@drawable/text_fields_style"
                android:textSize="13sp"


                android:padding="10dip"
                android:singleLine="true" />




            <EditText
                android:id="@+id/snppassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/text_fields_style"

                android:hint="Password"

                android:textSize="13sp"



                android:padding="10dip"
                android:singleLine="true" />

        <Button
            android:layout_centerInParent="true"
            android:layout_below="@+id/input_layout_cnfphnno"
            android:id="@+id/btnResiter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:background="@drawable/bluebutton_style"
            android:text="Login"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"



        android:gravity="center"

        android:layout_height="50dp">

        <View
            android:layout_width="100dp"
            android:layout_height="1.5dp"
            android:background="#F06FE5"
            android:layout_marginRight="15dp"/>



        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:textSize="11sp"

            android:text="Connect with"


            >

        </TextView>


        <View
            android:layout_width="100dp"
            android:layout_height="1.5dp"
            android:layout_marginLeft="15dp"
            android:background="#F06FE5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="70dp"


        android:gravity="center">


        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:scaleType="centerInside"


            android:src="@drawable/facebook"


            />

        <TextView


            android:layout_width="50dp"
            android:layout_height="wrap_content"


            android:gravity="center"


            android:text="or"


            >

        </TextView>

        <ImageButton
            android:id="@+id/google"

            android:background="@null"
            android:layout_width="45dp"
            android:layout_height="45dp"

            android:scaleType="centerInside"


            android:src="@drawable/google" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"



        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"

            android:text="Dont  have account?"
            android:textSize="11sp"

            />

        <TextView
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  Sign Up"


            android:textSize="11sp"

            android:textStyle="bold" />


    </LinearLayout>



</LinearLayout>
